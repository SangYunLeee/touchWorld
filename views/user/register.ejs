<% layout('layouts/template') %>
<div class="container loginForm" >
    <form action="/user/register" method="POST" class="validated-form col-md-5 col-sm-7 col-10 mx-auto p-0 position-relative" style="max-width: 300px;" novalidate>
        <h4 class="mx-auto text-center" >회원가입</h4>
        <div class="mb-3">
            <label class="form-label" for="username">아이디</label>
            <input class="form-control" type="text" id="username" name="username" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">비밀번호</label>
            <input class="form-control" type="password" id="password" name="password" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <button class="btn btn-success position-absolute" style="right: 0px;">회원가입</button>
    </form>
</div>
