<% if(typeof success != "undefined" && success.length) { %>
    <div class="alert alert-success text-center alert-dismissible fade show mx-auto" style="max-width: 700px;" role="alert">
        <%= success %>
    </div>
<% } %>

<% if(typeof error != "undefined" && error.length) { %>
    <div class="alert alert-danger text-center alert-dismissible fade show mx-auto" style="max-width: 700px;" role="alert">
        <%= error %>
    </div>
<% } %>